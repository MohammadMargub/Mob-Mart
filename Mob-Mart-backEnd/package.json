{
  "name": "mob-mart-backend",
  "version": "1.0.0",
  "main": "./dist/app.js",
  "type": "module",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "npx tsx watch ./src/app.ts",
    "prepare": "husky || true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "prettier --write --ignore-unknown",
      "npx eslint 'src/**/*.{ts,tsx}'"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.5.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "ts-node": "^10.9.2",
    "typescriptnpm": "^1.0.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.1.0",
    "@types/validator": "^13.12.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "lint": "^1.1.2",
    "morgan": "^1.10.0",
    "prettier": "^3.3.2",
    "sonarqube-scanner": "^4.2.2",
    "staged": "^0.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  }
}
