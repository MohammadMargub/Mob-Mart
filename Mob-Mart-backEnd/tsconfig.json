{
  "compilerOptions": {
    "noUnusedParameters": false, // This will ignore unused local variables
    "noUnusedLocals": false, // This will ignore unused parameters
    "target": "ES2020" /* Set the JavaScript language version for emitted JavaScript and include */,
    "module": "NodeNext" /* Specify what module code is generated. */,
    "moduleResolution": "NodeNext" /* Specify how TypeScript looks up a file from a given module specifier. */,
    "rootDir": "src" /* Specify the root folder within your source files. */,
    "outDir": "dist" /* Specify an output folder for all emitted files. */,
    "strict": true /* Enable all strict type-checking options. */,
    "pretty": true /*For code formation */,
    "sourceMap": true /*For code debugging */
  }
}
